<Window x:Class="EntityEditor.Controls.SetMetadata"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Metadata" Height="75" Width="400" ResizeMode="NoResize"
        WindowStyle="ToolWindow" Topmost="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBox VerticalAlignment="Center" x:Name="Input"
                 Grid.Column="0" FontSize="20" Margin="5,5" />
        <Button Grid.Column="1" Width="50" VerticalAlignment="Center" Margin="5"
                Padding="5" Click="Button_Click">Ok</Button>
    </Grid>
</Window>