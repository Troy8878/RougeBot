<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:properties="clr-namespace:EntityEditor.Entities.Representations.Properties"
                    xmlns:views="clr-namespace:EntityEditor.Entities.Representations.Views">
    <DataTemplate x:Key="PropBoolTemplate" DataType="properties:Bool">
        <CheckBox Height="25" IsChecked="{Binding Path=Value}" />
    </DataTemplate>
    
    <DataTemplate x:Key="PropVectorTemplate" DataType="properties:Vector">
        <views:VectorView Field="{Binding}" />
    </DataTemplate>
</ResourceDictionary>