<UserControl x:Class="EntityEditor.Entities.Representations.Views.StringMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:properties="clr-namespace:EntityEditor.Entities.Representations.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance properties:StringMap}">
    <Grid>
        <DataGrid ItemsSource="{Binding Path=Values}" CanUserAddRows="True"
                  CanUserDeleteRows="True" FontSize="14" MinWidth="200"/>
    </Grid>
</UserControl>
