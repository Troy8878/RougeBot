<Window x:Class="EntityEditor.PrefabEditor.Controls.SetMetadata"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Metadata" Height="300" Width="400" ResizeMode="NoResize"
        WindowStyle="ToolWindow" Topmost="True"
        Icon="/wizard0.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox x:Name="Input" Grid.Row="0" FontSize="16" Margin="5,5"
                 AcceptsReturn="True" FontFamily="Consolas"/>
        <Button Grid.Row="1" Width="50" VerticalAlignment="Center" Margin="5"
                Padding="5" Click="Button_Click">Ok</Button>
    </Grid>
</Window>